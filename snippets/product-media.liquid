{% comment %} 
  NOTE:
  - In this snippet, "media" is received from another liquid file by passing it like "props" from Reactjs, 
    which helps make this snippet become very dynamic or reusable.
  - The case syntax works like a switch case or if else condition
{% endcomment %}

{% case media.media_type %} 
  {% when 'image' %}
    <img 
      width="auto" 
      height="auto" 
      src="{{ media | img_url: 'large' }}" 
      alt="{{ media.preview_image.alt }}" 
      class="w-full h-full object-cover"
    >
  
    {% when 'external_video' %}
      {{ media |  external_video_tag: class: 'w-full h-80 object-cover' }}
    
    {% when 'video' %}
      {{ media | video_tag: controls: true, class: 'w-full h-full object-cover' }}

    {% when 'model' %}
      {{ media |  model_viewer_tag }}

    {% else %}
      {{ media |  media_tag }}
{% endcase %}